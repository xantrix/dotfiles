set encoding=utf8

set tabstop=2
set expandtab
set shiftwidth=2

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines

set number
set ruler
syntax enable 

" Map <Space> to / (search) and Ctrl-<Space> to ? (backwards search)
map <space> /
map <C-space> ?

" Always show the status line
set laststatus=2

